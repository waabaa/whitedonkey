# Application Environment
NODE_ENV=production
PORT=3000

# Domain Configuration
NEXTAUTH_URL=https://whitedonkey.ktenterprise.net
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-32-chars-long

# Database Configuration
DATABASE_URL="postgresql://whitedonkey:secure_password@localhost:5432/whitedonkey"

# Application Configuration
APP_NAME="흰당나귀 (White Donkey)"
ADMIN_EMAIL=admin@whitedonkey.co.kr

# File Upload Configuration
UPLOAD_DIR=/var/www/uploads
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 15 * 60 * 1000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12

# Email Configuration (선택사항 - 나중에 설정)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@whitedonkey.co.kr
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@whitedonkey.co.kr

# Logging Configuration
LOG_LEVEL=info

# Performance Configuration
NODE_OPTIONS="--max-old-space-size=2048"

# Backup Configuration
BACKUP_DIR=/var/backups/whitedonkey

# Monitoring (선택사항)
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_ID=your-analytics-id-here